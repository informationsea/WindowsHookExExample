<Window x:Class="WindowsHookExExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowsHookExExample"
        mc:Ignorable="d"
        Title="SetWindowsHookEx Example" Height="450" Width="800">
    <DockPanel>
        <DockPanel DockPanel.Dock="Top">
            <CheckBox Content="Hook Key events" Name="checkboxHook" Checked="CheckboxHookChanged" Unchecked="CheckboxHookChanged" />
            <CheckBox Content="Consume all key events" Name="checkboxConsume" Checked="ConsumeChanged" Unchecked="ConsumeChanged" />
        </DockPanel>
        <TextBox Name="textBox" IsReadOnly="True" FontFamily="Consolas" />
    </DockPanel>
</Window>
